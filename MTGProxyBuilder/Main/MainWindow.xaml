<Window x:Class="MTGProxyBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTGProxyBuilder"
        mc:Ignorable="d"
        Title="MTGProxyBuilder" Height="500" Width="500" MinHeight="500" MinWidth="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,0,10,10">
        <TextBlock FontSize="24">Cards to print:</TextBlock>
        <ScrollViewer Margin="0,30,0,37">
            <TextBox Name="Decklist" FontSize="16" AcceptsReturn="True"></TextBox>
        </ScrollViewer>
        <CheckBox Name="FlipCards" VerticalAlignment="Center" Margin="0,428,192,0" FontSize="24" Height="32">Flip cards?</CheckBox>
        <Button Name="CreatePDFButton" VerticalAlignment="Bottom" FontSize="20" Click="CreatePDFButtonClicked" Margin="280,0,0,-1">Create PDF</Button>
    </Grid>
</Window>